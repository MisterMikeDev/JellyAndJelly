---
import type { Product } from "@/types";

export interface Props {
    product: Product;
}

const { title, description, image, color, slug, position } = Astro.props.product;
---

<a href={`/${slug}`}>
    <article
        class="relative w-full text-white hover:-translate-y-1 hover:brightness-95 transition-all duration-300 ease-in-out"
    >
        <div
            class="w-full h-20 [clip-path:polygon(0_50%,_0_100%,_100%_100%);] -mt-8"
            style={`
                background-color: ${color};
            `}
        >
        </div>

        <main
            class={`
                w-full min-h-[20rem] p-8 flex flex-col md:flex-row justify-center items-center gap-8
                ${position === "right" ? "md:flex-row-reverse" : ""}
            `}
            style={`background-color: ${color};`}
        >
            <div class="flex flex-col gap-4 items-center">
                <h2 class="text-3xl font-pacifico">{title}</h2>
                <p class="max-w-[35ch] text-justify">{description}</p>
            </div>

            <img
                src={`/products/${image}`}
                alt={`Foto del producto ${title}`}
                class="w-80 aspect-square object-cover rounded-lg"
            />
        </main>

        <div
            class="w-full h-20 [clip-path:polygon(0_0,_100%_50%,_100%_0);] -mb-8"
            style={`background-color: ${color};`}
        >
        </div>
    </article>
</a>
